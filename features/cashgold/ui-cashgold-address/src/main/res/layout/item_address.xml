<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/dimen_16"
    android:layout_marginBottom="16dp"
    android:theme="@style/Cashgold"
    android:background="@drawable/bg_yellow_transparent_rounded"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/tv_village"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Perum Permata Jingga"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/poppins_semibold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Perum Permata Jingga"
        android:textSize="13sp"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_village"
        />

    <TextView
        android:id="@+id/tv_sub_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Perum Permata Jingga"
        android:textSize="10sp"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_address"
        tools:ignore="SmallSp" />

    <ImageView
        android:id="@+id/btn_delete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/icon_delete"/>

    <Button
        android:id="@+id/btn_update_to_main"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:background="@drawable/bg_button_yellow_square"
        android:layout_marginTop="8dp"
        android:textSize="12sp"
        android:textAllCaps="false"
        android:paddingHorizontal="32dp"
        android:textColor="@android:color/white"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginEnd="18dp"
        app:layout_constraintTop_toBottomOf="@id/tv_sub_address"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_update"
        android:text="@string/jadikan_alamat_utama"/>

    <TextView
        android:id="@+id/tv_is_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/alamat_utama"
        android:paddingVertical="4dp"
        android:paddingHorizontal="24dp"
        android:textColor="#0C965A"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/tv_sub_address"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/bg_button_green_square"/>

    <Button
        android:id="@+id/btn_update"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@drawable/bg_button_yellow_square_border"
        android:layout_marginTop="8dp"
        android:textSize="12sp"
        android:textAllCaps="false"
        android:paddingHorizontal="32dp"
        android:textColor="?colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/tv_sub_address"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/ubah"/>
</androidx.constraintlayout.widget.ConstraintLayout>