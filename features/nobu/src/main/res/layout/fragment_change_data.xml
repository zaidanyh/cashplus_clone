<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".presentation.binding.ChangeDataFragment">

    <ImageView
        android:id="@+id/icon_close"
        android:layout_width="@dimen/dimen_28"
        android:layout_height="@dimen/dimen_28"
        android:layout_marginTop="@dimen/dimen_16"
        android:layout_marginEnd="@dimen/dimen_16"
        android:src="@drawable/close_icon_red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtDataIdentity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_16"
        android:fontFamily="@font/poppins_medium"
        android:textSize="16sp"
        android:text="@string/data_identity"
        android:textColor="#334155"
        app:layout_constraintTop_toTopOf="@id/icon_close"
        app:layout_constraintBottom_toBottomOf="@id/icon_close"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/txt_fullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_16"
        android:fontFamily="@font/poppins_regular"
        android:textSize="14sp"
        android:text="@string/fullname"
        android:textColor="#3C4D5F"
        app:layout_constraintTop_toBottomOf="@id/txtDataIdentity"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.pasukanlangit.id.core.presentation.components.CustomTextInputLayout
        android:id="@+id/input_fullname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_4"
        android:layout_marginHorizontal="@dimen/dimen_16"
        app:hintEnabled="false"
        app:hintAnimationEnabled="false"
        app:errorEnabled="true"
        app:layout_constraintTop_toBottomOf="@id/txt_fullname">

        <EditText
            android:id="@+id/edt_fullname"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_38"
            android:paddingHorizontal="@dimen/dimen_12"
            android:background="@drawable/bg_white_border_slate200_rounded_8"
            android:fontFamily="@font/poppins_regular"
            android:textSize="12sp"
            android:hint="@string/input_fullname"
            android:inputType="text"
            android:textColor="#3C4D5F"
            android:textColorHint="#94A3B8"
            android:importantForAutofill="no"/>
    </com.pasukanlangit.id.core.presentation.components.CustomTextInputLayout>

    <TextView
        android:id="@+id/txt_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_4"
        android:layout_marginStart="@dimen/dimen_16"
        android:fontFamily="@font/poppins_regular"
        android:textSize="14sp"
        android:text="@string/phone_number"
        android:textColor="#3C4D5F"
        app:layout_constraintTop_toBottomOf="@id/input_fullname"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.pasukanlangit.id.core.presentation.components.CustomTextInputLayout
        android:id="@+id/input_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_4"
        android:layout_marginHorizontal="@dimen/dimen_16"
        app:hintEnabled="false"
        app:hintAnimationEnabled="false"
        app:errorEnabled="true"
        app:layout_constraintTop_toBottomOf="@id/txt_phone_number">

        <EditText
            android:id="@+id/edt_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_38"
            android:paddingHorizontal="@dimen/dimen_12"
            android:background="@drawable/bg_white_border_slate200_rounded_8"
            android:fontFamily="@font/poppins_regular"
            android:textSize="12sp"
            android:hint="@string/input_phone"
            android:inputType="phone"
            android:textColor="#3C4D5F"
            android:textColorHint="#94A3B8"
            android:importantForAutofill="no"/>
    </com.pasukanlangit.id.core.presentation.components.CustomTextInputLayout>

    <TextView
        android:id="@+id/txt_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_4"
        android:layout_marginStart="@dimen/dimen_16"
        android:fontFamily="@font/poppins_regular"
        android:textSize="14sp"
        android:text="@string/email_address"
        android:textColor="#3C4D5F"
        app:layout_constraintTop_toBottomOf="@id/input_phone_number"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.pasukanlangit.id.core.presentation.components.CustomTextInputLayout
        android:id="@+id/input_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_4"
        android:layout_marginHorizontal="@dimen/dimen_16"
        app:hintEnabled="false"
        app:hintAnimationEnabled="false"
        app:errorEnabled="true"
        app:layout_constraintTop_toBottomOf="@id/txt_email">

        <EditText
            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_38"
            android:paddingHorizontal="@dimen/dimen_12"
            android:background="@drawable/bg_white_border_slate200_rounded_8"
            android:fontFamily="@font/poppins_regular"
            android:textSize="12sp"
            android:hint="@string/input_email"
            android:inputType="textEmailAddress"
            android:textColor="#3C4D5F"
            android:textColorHint="#94A3B8"
            android:importantForAutofill="no"/>
    </com.pasukanlangit.id.core.presentation.components.CustomTextInputLayout>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_42"
        android:layout_marginTop="@dimen/dimen_16"
        android:layout_marginBottom="@dimen/dimen_24"
        android:layout_marginHorizontal="@dimen/dimen_16"
        android:background="@drawable/background_button_state"
        android:fontFamily="@font/poppins_medium"
        android:textSize="13sp"
        android:text="@string/save"
        android:textAllCaps="false"
        android:textColor="@drawable/color_indicator_state"
        android:enabled="false"
        app:layout_constraintTop_toBottomOf="@id/input_email"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>