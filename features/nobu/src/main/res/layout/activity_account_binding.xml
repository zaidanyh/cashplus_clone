<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFC"
    tools:context=".presentation.binding.AccountBindingActivity">

    <com.pasukanlangit.id.core.presentation.components.AppBarWithIconBackView
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_app_bar"
        app:title="Hubungkan"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingVertical="@dimen/dimen_16"
        app:layout_constraintTop_toBottomOf="@id/appBar"
        app:layout_constraintBottom_toTopOf="@id/btn_submit">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_binding_acocunt"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_binding_nobu_circle"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_12"
                android:layout_marginHorizontal="@dimen/dimen_16"
                android:fontFamily="@font/poppins_medium"
                android:textSize="18sp"
                android:text="@string/connecting_nobu"
                android:textColor="#334155"
                app:layout_constraintTop_toBottomOf="@id/img_binding_acocunt"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/txtDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_12"
                android:layout_marginHorizontal="@dimen/dimen_16"
                android:fontFamily="@font/poppins_regular"
                android:textSize="14sp"
                android:text="@string/connecting_desc"
                android:textColor="#334155"
                app:layout_constraintTop_toBottomOf="@id/txtTitle"/>

            <ImageView
                android:id="@+id/img_benefit1"
                android:layout_width="@dimen/dimen_16"
                android:layout_height="@dimen/dimen_16"
                android:layout_marginStart="@dimen/dimen_16"
                android:src="@drawable/ic_copy_success"
                app:layout_constraintTop_toTopOf="@id/txt_benefit1"
                app:layout_constraintBottom_toBottomOf="@id/txt_benefit1"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/txt_benefit1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginStart="@dimen/dimen_10"
                android:layout_marginEnd="@dimen/dimen_16"
                android:fontFamily="@font/poppins_regular"
                android:textSize="14sp"
                android:text="@string/connecting_benefit_1"
                android:textColor="#334155"
                app:layout_constraintTop_toBottomOf="@id/txtDesc"
                app:layout_constraintStart_toEndOf="@id/img_benefit1"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageView
                android:id="@+id/img_benefit2"
                android:layout_width="@dimen/dimen_16"
                android:layout_height="@dimen/dimen_16"
                android:layout_marginStart="@dimen/dimen_16"
                android:src="@drawable/ic_copy_success"
                app:layout_constraintTop_toTopOf="@id/txt_benefit2"
                app:layout_constraintBottom_toBottomOf="@id/txt_benefit2"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/txt_benefit2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_12"
                android:layout_marginStart="@dimen/dimen_10"
                android:layout_marginEnd="@dimen/dimen_16"
                android:fontFamily="@font/poppins_regular"
                android:textSize="14sp"
                android:text="@string/connecting_benefit_2"
                android:textColor="#334155"
                app:layout_constraintTop_toBottomOf="@id/txt_benefit1"
                app:layout_constraintStart_toEndOf="@id/img_benefit2"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/txtRules"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginHorizontal="@dimen/dimen_16"
                android:fontFamily="@font/poppins_regular"
                android:textSize="14sp"
                android:text="@string/connecting_rules"
                android:textColor="#334155"
                app:layout_constraintTop_toBottomOf="@id/txt_benefit2"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/wrapper_phone_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16"
                android:layout_marginHorizontal="@dimen/dimen_16"
                android:padding="@dimen/dimen_12"
                android:background="@drawable/bg_sky50_border_sky100_rounded_12"
                app:layout_constraintTop_toBottomOf="@id/txtRules">

                <ImageView
                    android:id="@+id/ic_call"
                    android:layout_width="@dimen/dimen_16"
                    android:layout_height="@dimen/dimen_16"
                    android:src="@drawable/ic_call_received"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <LinearLayout
                    android:id="@+id/wrapper_data"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_12"
                    android:orientation="vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/ic_call"
                    app:layout_constraintEnd_toStartOf="@id/btn_change">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="12sp"
                        android:text="@string/phone_number"
                        android:textColor="#334155"/>

                    <TextView
                        android:id="@+id/tv_phone_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_4"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="14sp"
                        tools:text="08133429220302"
                        android:textColor="#1E293B"/>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_change"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_28"
                    android:background="@drawable/bg_primary_rounded_20"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="12sp"
                    android:text="@string/change"
                    android:textColor="#FFFFFF"
                    android:textAllCaps="false"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/wrapper_warning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16"
                android:layout_marginHorizontal="@dimen/dimen_16"
                android:padding="@dimen/dimen_12"
                android:background="@drawable/bg_warning_y100_border_y400"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/wrapper_phone_data">

                <ImageView
                    android:id="@+id/icon_information"
                    android:layout_width="@dimen/dimen_16"
                    android:layout_height="@dimen/dimen_16"
                    android:src="@drawable/icon_information"
                    app:tint="#475569"
                    tools:tint="#475569"
                    app:layout_constraintTop_toTopOf="@id/txtInformation"
                    app:layout_constraintBottom_toBottomOf="@id/txtInformation"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/txtInformation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_8"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="14sp"
                    android:text="@string/warning"
                    android:textColor="#475569"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/icon_information"/>

                <TextView
                    android:id="@+id/txt_desc_warning"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_6"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="12sp"
                    android:text="@string/warning_decs"
                    app:layout_constraintTop_toBottomOf="@id/txtInformation"
                    app:layout_constraintStart_toStartOf="@id/txtInformation"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="#12ACE3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_38"
        android:layout_marginBottom="@dimen/dimen_16"
        android:layout_marginHorizontal="@dimen/dimen_16"
        android:background="@drawable/background_button_state"
        android:fontFamily="@font/poppins_medium"
        android:textSize="13sp"
        android:text="@string/continuing"
        android:textAllCaps="false"
        android:textColor="@drawable/color_indicator_state"
        android:enabled="false"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>