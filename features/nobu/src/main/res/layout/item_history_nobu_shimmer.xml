<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/dimen_12"
    android:padding="@dimen/dimen_16">

    <View
        android:id="@+id/shimmer_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_24"
        android:background="#ddd"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/shimmer_date"
        android:layout_width="0dp"
        android:layout_height="18dp"
        android:layout_marginTop="@dimen/dimen_16"
        android:background="#ddd"
        app:layout_constraintWidth_percent=".3"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintTop_toBottomOf="@id/shimmer_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/shimmer_time"
        android:layout_width="0dp"
        android:layout_height="18dp"
        android:layout_marginTop="@dimen/dimen_4"
        android:background="#ddd"
        app:layout_constraintWidth_percent=".25"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintTop_toBottomOf="@id/shimmer_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:layout_width="0dp"
        android:layout_height="18dp"
        android:background="#ddd"
        app:layout_constraintWidth_percent=".3"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintTop_toTopOf="@id/shimmer_date"
        app:layout_constraintBottom_toBottomOf="@id/shimmer_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>