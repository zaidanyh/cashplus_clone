<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimen_16"
    android:layout_marginBottom="@dimen/dimen_8"
    android:layout_margin="@dimen/dimen_4"
    android:background="@drawable/bg_white_border_slate100_rounded_16">

    <TextView
        android:id="@+id/label_product_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:textSize="12sp"
        android:text="@string/kode_produk"
        android:textColor="#64748B"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_product_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="16sp"
        tools:text="BNKTTD5"
        android:textColor="#334155"
        app:layout_constraintTop_toBottomOf="@id/label_product_code"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_rebate_total_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/poppins_regular"
        android:textSize="12sp"
        android:text="@string/total_rebate"
        android:textColor="#64748B"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_code"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_rebate_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="14sp"
        tools:text="Rp 1,000"
        android:textColor="#334155"
        app:layout_constraintTop_toBottomOf="@+id/tv_rebate_total_label"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>