<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFC"
    tools:context="com.pasukanlangit.id.ui_downline_register.RegisterDownLineActivity">

    <com.pasukanlangit.id.core.presentation.components.AppBarWithIconBackView
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        app:title="Register Downline"
        android:layout_height="@dimen/dimen_app_bar"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrolllayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/appbar"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_24"
            android:layout_marginHorizontal="@dimen/dimen_16">

            <TextView
                android:id="@+id/txtFullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:textSize="13sp"
                android:text="@string/account_name"
                android:textColor="#3C4D5F"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.pasukanlangit.id.core.presentation.components.CustomTextInputLayout
                android:id="@+id/input_account_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                app:hintEnabled="false"
                app:hintAnimationEnabled="false"
                app:errorEnabled="true"
                app:layout_constraintTop_toBottomOf="@id/txtFullName">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_account_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_38"
                    android:paddingHorizontal="@dimen/dimen_12"
                    android:background="@drawable/bg_transparent_border_slate200_rounded_10"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="12sp"
                    android:hint="@string/input_account_name"
                    android:textColor="#1E293B"
                    android:textColorHint="#94A3B8"
                    android:inputType="textPersonName"
                    android:imeOptions="actionNext"
                    android:nextFocusDown="@id/edt_phone_number" />
            </com.pasukanlangit.id.core.presentation.components.CustomTextInputLayout>

            <TextView
                android:id="@+id/txt_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginTop="@dimen/dimen_4"
                android:textSize="13sp"
                android:text="@string/phone_number"
                android:textColor="#3C4D5F"
                app:layout_constraintTop_toBottomOf="@id/input_account_name"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.pasukanlangit.id.core.presentation.components.CustomTextInputLayout
                android:id="@+id/input_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                app:hintEnabled="false"
                app:hintAnimationEnabled="false"
                app:errorEnabled="true"
                app:layout_constraintTop_toBottomOf="@id/txt_phone_number">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_38"
                    android:paddingHorizontal="@dimen/dimen_12"
                    android:background="@drawable/bg_transparent_border_slate200_rounded_10"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="12sp"
                    android:hint="@string/input_phone_number"
                    android:textColor="#1E293B"
                    android:textColorHint="#94A3B8"
                    android:inputType="phone"
                    android:digits="1234567890"
                    android:imeOptions="actionNext"
                    android:nextFocusDown="@id/edt_name_owner"/>
            </com.pasukanlangit.id.core.presentation.components.CustomTextInputLayout>

            <TextView
                android:id="@+id/txt_name_owner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_4"
                android:fontFamily="@font/poppins_regular"
                android:textSize="13sp"
                android:text="@string/name_owner"
                android:textColor="#3C4D5F"
                app:layout_constraintTop_toBottomOf="@id/input_phone_number"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.pasukanlangit.id.core.presentation.components.CustomTextInputLayout
                android:id="@+id/input_name_owner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                app:hintEnabled="false"
                app:hintAnimationEnabled="false"
                app:errorEnabled="true"
                app:layout_constraintTop_toBottomOf="@id/txt_name_owner">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_name_owner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_38"
                    android:paddingHorizontal="@dimen/dimen_12"
                    android:background="@drawable/bg_transparent_border_slate200_rounded_10"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="12sp"
                    android:hint="@string/input_name_owner"
                    android:textColor="#1E293B"
                    android:textColorHint="#94A3B8"
                    android:inputType="textPersonName"
                    android:imeOptions="actionNext"
                    android:nextFocusDown="@id/edt_email"/>
            </com.pasukanlangit.id.core.presentation.components.CustomTextInputLayout>

            <TextView
                android:id="@+id/txt_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_4"
                android:fontFamily="@font/poppins_regular"
                android:textSize="13sp"
                android:text="@string/email_address"
                android:textColor="#3C4D5F"
                app:layout_constraintTop_toBottomOf="@id/input_name_owner"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.pasukanlangit.id.core.presentation.components.CustomTextInputLayout
                android:id="@+id/input_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                app:hintEnabled="false"
                app:hintAnimationEnabled="false"
                app:errorEnabled="true"
                app:layout_constraintTop_toBottomOf="@id/txt_email">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_email"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_38"
                    android:paddingHorizontal="@dimen/dimen_12"
                    android:background="@drawable/bg_transparent_border_slate200_rounded_10"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="12sp"
                    android:hint="@string/input_email"
                    android:textColor="#1E293B"
                    android:textColorHint="#94A3B8"
                    android:inputType="textEmailAddress"
                    android:imeOptions="actionNext"
                    android:nextFocusDown="@id/edt_password"/>
            </com.pasukanlangit.id.core.presentation.components.CustomTextInputLayout>

            <TextView
                android:id="@+id/txtPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_4"
                android:fontFamily="@font/poppins_regular"
                android:textSize="13sp"
                android:text="@string/password"
                android:textColor="#3C4D5F"
                app:layout_constraintTop_toBottomOf="@id/input_email"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.pasukanlangit.id.core.presentation.components.CustomTextInputLayout
                android:id="@+id/input_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                app:hintEnabled="false"
                app:hintAnimationEnabled="false"
                app:errorEnabled="true"
                app:passwordToggleEnabled="true"
                app:layout_constraintTop_toBottomOf="@id/txtPassword">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_38"
                    android:paddingHorizontal="@dimen/dimen_12"
                    android:background="@drawable/bg_transparent_border_slate200_rounded_10"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="12sp"
                    android:hint="@string/input_password"
                    android:textColor="#1E293B"
                    android:textColorHint="#94A3B8"
                    android:inputType="textPassword"
                    android:imeOptions="actionNext"
                    android:nextFocusDown="@id/edt_repeat_password"/>
            </com.pasukanlangit.id.core.presentation.components.CustomTextInputLayout>

            <TextView
                android:id="@+id/txt_repeat_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_4"
                android:fontFamily="@font/poppins_regular"
                android:textSize="13sp"
                android:text="@string/repeat_password"
                android:textColor="#3C4D5F"
                app:layout_constraintTop_toBottomOf="@id/input_password"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.pasukanlangit.id.core.presentation.components.CustomTextInputLayout
                android:id="@+id/input_repeat_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                app:hintEnabled="false"
                app:hintAnimationEnabled="false"
                app:errorEnabled="true"
                app:passwordToggleEnabled="true"
                app:layout_constraintTop_toBottomOf="@id/txt_repeat_password">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_repeat_password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_38"
                    android:paddingHorizontal="@dimen/dimen_12"
                    android:background="@drawable/bg_transparent_border_slate200_rounded_10"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="12sp"
                    android:hint="@string/input_repeat_password"
                    android:textColor="#1E293B"
                    android:textColorHint="#94A3B8"
                    android:inputType="textPassword"
                    android:imeOptions="actionNext"
                    android:nextFocusDown="@id/edt_email"/>
            </com.pasukanlangit.id.core.presentation.components.CustomTextInputLayout>
            
            <TextView
                android:id="@+id/txtAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_4"
                android:fontFamily="@font/poppins_regular"
                android:textSize="13sp"
                android:text="@string/address"
                android:textColor="#3C4D5F"
                app:layout_constraintTop_toBottomOf="@id/input_repeat_password"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.pasukanlangit.id.core.presentation.components.CustomTextInputLayout
                android:id="@+id/input_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                app:hintEnabled="false"
                app:hintAnimationEnabled="false"
                app:errorEnabled="true"
                app:layout_constraintTop_toBottomOf="@id/txtAddress">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_address"
                    android:layout_width="match_parent"
                    android:layout_height="84dp"
                    android:paddingVertical="@dimen/dimen_10"
                    android:paddingHorizontal="@dimen/dimen_12"
                    android:gravity="top"
                    android:background="@drawable/bg_transparent_border_slate200_rounded_10"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="12sp"
                    android:hint="@string/input_address"
                    android:textColor="#1E293B"
                    android:textColorHint="#94A3B8"
                    android:inputType="text|textMultiLine"
                    android:imeOptions="actionNext"
                    android:maxLength="160"
                    android:nextFocusDown="@id/province_list"/>
            </com.pasukanlangit.id.core.presentation.components.CustomTextInputLayout>

            <TextView
                android:id="@+id/txtProvince"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_4"
                android:fontFamily="@font/poppins_regular"
                android:textSize="13sp"
                android:text="@string/province"
                android:textColor="#3C4D5F"
                app:layout_constraintTop_toBottomOf="@id/input_address"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.pasukanlangit.id.core.presentation.components.CustomTextInputLayout
                android:id="@+id/input_province"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                app:hintEnabled="false"
                app:hintAnimationEnabled="false"
                app:errorEnabled="true"
                app:layout_constraintTop_toBottomOf="@id/txtProvince">

                <AutoCompleteTextView
                    android:id="@+id/province_list"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_38"
                    android:layout_marginTop="2dp"
                    android:paddingHorizontal="@dimen/dimen_12"
                    android:drawableEnd="@drawable/icon_expand"
                    android:textAppearance="?android:attr/textAppearanceListItemSmall"
                    android:background="@drawable/bg_transparent_border_slate200_rounded_10"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="12sp"
                    android:hint="@string/choose_province"
                    android:inputType="textPhonetic"
                    android:textColor="#1E293B"
                    android:textColorHint="#94A3B8"
                    android:imeOptions="actionNext"
                    android:nextFocusDown="@id/district_list"/>
            </com.pasukanlangit.id.core.presentation.components.CustomTextInputLayout>

            <TextView
                android:id="@+id/txtCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_4"
                android:fontFamily="@font/poppins_regular"
                android:textSize="13sp"
                android:text="@string/city"
                android:textColor="#3C4D5F"
                app:layout_constraintTop_toBottomOf="@id/input_province"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.pasukanlangit.id.core.presentation.components.CustomTextInputLayout
                android:id="@+id/input_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                app:hintEnabled="false"
                app:hintAnimationEnabled="false"
                app:errorEnabled="true"
                app:layout_constraintTop_toBottomOf="@id/txtCity">

                <AutoCompleteTextView
                    android:id="@+id/district_list"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_38"
                    android:layout_marginTop="2dp"
                    android:paddingHorizontal="@dimen/dimen_12"
                    android:drawableEnd="@drawable/icon_expand"
                    android:textAppearance="?android:attr/textAppearanceListItemSmall"
                    android:background="@drawable/bg_transparent_border_slate200_rounded_10"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="12sp"
                    android:hint="@string/choose_city"
                    android:inputType="textPhonetic"
                    android:textColor="#1E293B"
                    android:textColorHint="#94A3B8"
                    android:imeOptions="actionNext"
                    android:nextFocusDown="@id/sub_district_list"/>
            </com.pasukanlangit.id.core.presentation.components.CustomTextInputLayout>

            <TextView
                android:id="@+id/txtSubDistrict"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_4"
                android:fontFamily="@font/poppins_regular"
                android:textSize="13sp"
                android:text="@string/districts"
                android:textColor="#3C4D5F"
                app:layout_constraintTop_toBottomOf="@id/input_city"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.pasukanlangit.id.core.presentation.components.CustomTextInputLayout
                android:id="@+id/input_sub_district"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                app:hintEnabled="false"
                app:hintAnimationEnabled="false"
                app:errorEnabled="true"
                app:layout_constraintTop_toBottomOf="@id/txtSubDistrict">

                <AutoCompleteTextView
                    android:id="@+id/sub_district_list"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_38"
                    android:layout_marginTop="2dp"
                    android:paddingHorizontal="@dimen/dimen_12"
                    android:drawableEnd="@drawable/icon_expand"
                    android:textAppearance="?android:attr/textAppearanceListItemSmall"
                    android:background="@drawable/bg_transparent_border_slate200_rounded_10"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="12sp"
                    android:hint="@string/choose_districts"
                    android:inputType="textPhonetic"
                    android:textColor="#1E293B"
                    android:textColorHint="#94A3B8"
                    android:imeOptions="actionNext"
                    android:nextFocusDown="@id/village_list"/>
            </com.pasukanlangit.id.core.presentation.components.CustomTextInputLayout>

            <TextView
                android:id="@+id/txtVillage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_4"
                android:fontFamily="@font/poppins_regular"
                android:textSize="13sp"
                android:text="@string/village"
                android:textColor="#3C4D5F"
                app:layout_constraintTop_toBottomOf="@id/input_sub_district"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.pasukanlangit.id.core.presentation.components.CustomTextInputLayout
                android:id="@+id/input_village"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                app:hintEnabled="false"
                app:hintAnimationEnabled="false"
                app:errorEnabled="true"
                app:layout_constraintTop_toBottomOf="@id/txtVillage">

                <AutoCompleteTextView
                    android:id="@+id/village_list"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_38"
                    android:layout_marginTop="2dp"
                    android:paddingHorizontal="@dimen/dimen_12"
                    android:drawableEnd="@drawable/icon_expand"
                    android:textAppearance="?android:attr/textAppearanceListItemSmall"
                    android:background="@drawable/bg_transparent_border_slate200_rounded_10"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="12sp"
                    android:hint="@string/choose_village"
                    android:inputType="textPhonetic"
                    android:textColor="#1E293B"
                    android:textColorHint="#94A3B8"
                    android:imeOptions="actionNext"
                    android:nextFocusDown="@id/edt_postal_code"/>
            </com.pasukanlangit.id.core.presentation.components.CustomTextInputLayout>

            <TextView
                android:id="@+id/txtPostalCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_4"
                android:fontFamily="@font/poppins_regular"
                android:textSize="13sp"
                android:text="@string/postal_code"
                android:textColor="#3C4D5F"
                app:layout_constraintTop_toBottomOf="@id/input_village"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.pasukanlangit.id.core.presentation.components.CustomTextInputLayout
                android:id="@+id/input_postal_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                app:hintEnabled="false"
                app:hintAnimationEnabled="false"
                app:errorEnabled="true"
                app:layout_constraintTop_toBottomOf="@id/txtPostalCode">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_postal_code"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_38"
                    android:paddingHorizontal="@dimen/dimen_12"
                    android:background="@drawable/bg_transparent_border_slate200_rounded_10"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="12sp"
                    android:hint="@string/input_postal_code"
                    android:textColor="#1E293B"
                    android:textColorHint="#94A3B8"
                    android:inputType="number"
                    android:imeOptions="actionDone"
                    android:maxLength="5"/>
            </com.pasukanlangit.id.core.presentation.components.CustomTextInputLayout>

            <Button
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_38"
                android:layout_marginVertical="@dimen/dimen_20"
                android:padding="0dp"
                android:background="@drawable/background_button_state"
                android:fontFamily="@font/poppins_medium"
                android:textSize="13sp"
                android:text="@string/downline_register"
                android:textColor="@drawable/color_indicator_state"
                android:textAllCaps="false"
                app:layout_constraintTop_toBottomOf="@id/input_postal_code"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>