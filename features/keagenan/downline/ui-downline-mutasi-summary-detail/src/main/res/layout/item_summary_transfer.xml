<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:layout_marginBottom="16dp"
    android:background="@drawable/bg_input_border_rounded">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_ver_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".4"/>

    <TextView
        android:id="@+id/label_total_transfer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total_transfer"
        android:textColor="#334155"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="#334155"
        android:fontFamily="@font/poppins_semibold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_total_transfer"
        tools:text="Rp 200.000"/>


    <TextView
        android:id="@+id/tv_username_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="4dp"
        android:text="@string/username"
        android:textSize="12sp"
        android:textColor="#64748B"
        app:layout_constraintTop_toBottomOf="@+id/tv_price"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline_ver_left"
        />

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        tools:text="@string/ending_balance"
        android:textSize="14sp"
        android:textColor="#334155"
        android:fontFamily="@font/poppins_semibold"
        app:layout_constraintTop_toBottomOf="@+id/tv_username_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline_ver_left"
        />

    <TextView
        android:id="@+id/tv_donwline_name_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="@string/nama_downline"
        android:layout_marginStart="4dp"
        android:textSize="12sp"
        android:textColor="#64748B"
        app:layout_constraintTop_toTopOf="@+id/tv_username_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guideline_ver_left" />

    <TextView
        android:id="@+id/tv_downline_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        tools:text="@string/tanggal_transaksi"
        android:layout_marginStart="4dp"
        android:textSize="14sp"
        android:textColor="#334155"
        android:fontFamily="@font/poppins_semibold"
        app:layout_constraintTop_toBottomOf="@+id/tv_donwline_name_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guideline_ver_left" />


</androidx.constraintlayout.widget.ConstraintLayout>