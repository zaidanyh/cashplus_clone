<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/dimen_16"
    android:background="@drawable/bg_white_border_slate100_rounded_8">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/loading_shimmer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/shimmer_name"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_24"
                android:background="#ddd"
                app:layout_constraintWidth_percent=".7"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <View
                android:id="@+id/shimmer_phone_number"
                android:layout_width="0dp"
                android:layout_height="18dp"
                android:layout_marginTop="@dimen/dimen_4"
                android:background="#ddd"
                app:layout_constraintWidth_percent=".3"
                app:layout_constraintTop_toBottomOf="@id/shimmer_name"
                app:layout_constraintStart_toStartOf="parent"/>

            <View
                android:id="@+id/shimmer_balance"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_20"
                android:layout_marginTop="@dimen/dimen_4"
                android:background="#ddd"
                app:layout_constraintWidth_percent=".4"
                app:layout_constraintTop_toBottomOf="@id/shimmer_phone_number"
                app:layout_constraintStart_toStartOf="parent"/>

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_20"
                android:layout_marginTop="@dimen/dimen_4"
                android:background="#ddd"
                app:layout_constraintWidth_percent=".4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>