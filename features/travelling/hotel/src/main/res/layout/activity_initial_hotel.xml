<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFC"
    tools:context="com.pasukanlangit.id.travelling.hotel.InitialHotelActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/img_dashboard"
        app:layout_constraintHeight_percent=".2"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/statusBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_24"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/wrapper_back"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_app_bar"
        app:layout_constraintTop_toBottomOf="@id/statusBar">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_12"
            android:padding="@dimen/dimen_4"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/titleFlight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="16sp"
            android:text="@string/hotel"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/wrapper_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8"
        android:layout_marginHorizontal="@dimen/dimen_16"
        android:paddingTop="@dimen/dimen_20"
        android:paddingBottom="@dimen/dimen_20"
        android:paddingStart="@dimen/dimen_16"
        android:paddingEnd="@dimen/dimen_16"
        android:background="@drawable/bg_white_border_slate200_rounded_12"
        android:transitionName="@string/layout_hotel"
        app:layout_constraintTop_toBottomOf="@id/wrapper_back">

        <TextView
            android:id="@+id/txtCityHotel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:textSize="13sp"
            android:text="@string/city_stay_cation"
            android:textColor="#334155"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_4"
            android:paddingTop="@dimen/dimen_8"
            android:paddingBottom="@dimen/dimen_8"
            android:paddingStart="@dimen/dimen_12"
            android:paddingEnd="@dimen/dimen_12"
            android:background="@drawable/bg_grey_slate100_rounded_10"
            android:fontFamily="@font/poppins_regular"
            android:textSize="12sp"
            android:text="@string/find_hotel_by_city"
            android:textColor="#475569"
            tools:drawableEnd="@drawable/ic_find_city_hotel"
            app:drawableEndCompat="@drawable/ic_find_city_hotel"
            app:layout_constraintTop_toBottomOf="@id/txtCityHotel"/>

        <TextView
            android:id="@+id/txtCheckin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16"
            android:fontFamily="@font/poppins_regular"
            android:textSize="13sp"
            android:text="@string/checkin"
            android:textColor="#334155"
            app:layout_constraintTop_toBottomOf="@id/tvCity"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvDateCheckin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_4"
            android:layout_marginEnd="@dimen/dimen_6"
            android:paddingTop="@dimen/dimen_8"
            android:paddingBottom="@dimen/dimen_8"
            android:paddingStart="@dimen/dimen_12"
            android:paddingEnd="@dimen/dimen_12"
            android:background="@drawable/bg_grey_slate100_rounded_10"
            android:fontFamily="@font/poppins_regular"
            android:textSize="12sp"
            android:textColor="#475569"
            tools:drawableEnd="@drawable/ic_new_calendar"
            app:drawableEndCompat="@drawable/ic_new_calendar"
            app:layout_constraintTop_toBottomOf="@id/txtCheckin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideLine"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".5"/>

        <TextView
            android:id="@+id/txtCheckout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16"
            android:layout_marginStart="@dimen/dimen_6"
            android:fontFamily="@font/poppins_regular"
            android:textSize="13sp"
            android:text="@string/checkout"
            android:textColor="#334155"
            app:layout_constraintTop_toBottomOf="@id/tvCity"
            app:layout_constraintStart_toEndOf="@id/guideLine"/>

        <TextView
            android:id="@+id/tvDateCheckout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_4"
            android:layout_marginStart="@dimen/dimen_6"
            android:paddingTop="@dimen/dimen_8"
            android:paddingBottom="@dimen/dimen_8"
            android:paddingStart="@dimen/dimen_12"
            android:paddingEnd="@dimen/dimen_12"
            android:background="@drawable/bg_grey_slate100_rounded_10"
            android:fontFamily="@font/poppins_regular"
            android:textSize="12sp"
            android:textColor="#475569"
            tools:drawableEnd="@drawable/ic_new_calendar"
            app:drawableEndCompat="@drawable/ic_new_calendar"
            app:layout_constraintTop_toBottomOf="@id/txtCheckout"
            app:layout_constraintStart_toEndOf="@id/guideLine"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/txtRoomAndVisitor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16"
            android:fontFamily="@font/poppins_regular"
            android:textSize="13sp"
            android:text="@string/room_and_visitor"
            android:textColor="#334155"
            app:layout_constraintTop_toBottomOf="@id/tvDateCheckin"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvRoomAndVisitor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_4"
            android:paddingTop="@dimen/dimen_8"
            android:paddingBottom="@dimen/dimen_8"
            android:paddingStart="@dimen/dimen_12"
            android:paddingEnd="@dimen/dimen_12"
            android:background="@drawable/bg_grey_slate100_rounded_10"
            android:fontFamily="@font/poppins_regular"
            android:textSize="12sp"
            android:text="@string/visitor_format"
            android:textColor="#475569"
            android:drawablePadding="@dimen/dimen_8"
            tools:drawableStart="@drawable/ic_user_circle"
            tools:drawableEnd="@drawable/ic_expand_sm"
            app:drawableStartCompat="@drawable/ic_user_circle"
            app:drawableEndCompat="@drawable/ic_expand_sm"
            app:layout_constraintTop_toBottomOf="@id/txtRoomAndVisitor"/>

        <Button
            android:id="@+id/btn_find_hotel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_42"
            android:background="@drawable/background_button_state"
            android:layout_marginTop="@dimen/dimen_20"
            android:fontFamily="@font/poppins_medium"
            android:textSize="13sp"
            android:text="@string/find_hotel"
            android:textColor="@drawable/color_indicator_state"
            android:textAllCaps="false"
            android:enabled="false"
            app:layout_constraintTop_toBottomOf="@id/tvRoomAndVisitor"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>