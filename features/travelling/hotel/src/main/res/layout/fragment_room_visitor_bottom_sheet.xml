<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.pasukanlangit.id.travelling.hotel.RoomVisitorBottomSheet">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/wrapper_room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_12"
        android:paddingTop="@dimen/dimen_6"
        android:paddingBottom="@dimen/dimen_6"
        android:layout_marginHorizontal="@dimen/dimen_20"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtRoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:textSize="13sp"
            android:text="@string/room"
            android:textColor="#334155"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/btn_decrease"
            android:layout_width="@dimen/dimen_28"
            android:layout_height="@dimen/dimen_28"
            android:background="@drawable/bg_white_border_slate200_rounded_8"
            android:padding="@dimen/dimen_6"
            android:src="@drawable/ic_decrease"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_room_total"/>

        <TextView
            android:id="@+id/tv_room_total"
            android:layout_width="@dimen/dimen_38"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/poppins_regular"
            android:textSize="13sp"
            tools:text="1"
            android:textColor="#334155"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_increase"/>

        <ImageView
            android:id="@+id/btn_increase"
            android:layout_width="@dimen/dimen_28"
            android:layout_height="@dimen/dimen_28"
            android:background="@drawable/bg_white_border_slate200_rounded_8"
            android:padding="@dimen/dimen_6"
            android:src="@drawable/ic_increase"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/line_gap1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="@dimen/dimen_20"
        android:background="#E2E8F0"
        app:layout_constraintTop_toBottomOf="@id/wrapper_room"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/wrapper_visitor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_20"
        android:paddingTop="@dimen/dimen_6"
        android:paddingBottom="@dimen/dimen_6"
        app:layout_constraintTop_toBottomOf="@id/line_gap1">

        <TextView
            android:id="@+id/txtVisitor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:textSize="13sp"
            android:text="@string/visitor"
            android:textColor="#334155"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/btn_decrease_visitor"
            android:layout_width="@dimen/dimen_28"
            android:layout_height="@dimen/dimen_28"
            android:background="@drawable/bg_white_border_slate200_rounded_8"
            android:padding="@dimen/dimen_6"
            android:src="@drawable/ic_decrease"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_visitor_total"/>

        <TextView
            android:id="@+id/tv_visitor_total"
            android:layout_width="@dimen/dimen_38"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/poppins_regular"
            android:textSize="13sp"
            tools:text="1"
            android:textColor="#334155"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_increase_visitor"/>

        <ImageView
            android:id="@+id/btn_increase_visitor"
            android:layout_width="@dimen/dimen_28"
            android:layout_height="@dimen/dimen_28"
            android:background="@drawable/bg_white_border_slate200_rounded_8"
            android:padding="@dimen/dimen_6"
            android:src="@drawable/ic_increase"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/line_gap2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="@dimen/dimen_20"
        android:background="#E2E8F0"
        app:layout_constraintTop_toBottomOf="@id/wrapper_visitor"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/wrapper_child"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_20"
        android:paddingTop="@dimen/dimen_4"
        android:paddingBottom="@dimen/dimen_4"
        app:layout_constraintTop_toBottomOf="@id/line_gap2">

        <TextView
            android:id="@+id/txtChild"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:textSize="13sp"
            android:text="@string/child"
            android:textColor="#334155"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/poppins_regular"
            android:textSize="12sp"
            android:text="@string/hotel_child_condition"
            android:textColor="#64748B"
            app:layout_constraintTop_toBottomOf="@id/txtChild"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/btn_decrease_child"
            android:layout_width="@dimen/dimen_28"
            android:layout_height="@dimen/dimen_28"
            android:background="@drawable/bg_white_border_slate200_rounded_8"
            android:padding="@dimen/dimen_6"
            android:src="@drawable/ic_decrease"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_child_total"/>

        <TextView
            android:id="@+id/tv_child_total"
            android:layout_width="@dimen/dimen_38"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/poppins_regular"
            android:textSize="13sp"
            tools:text="0"
            android:textColor="#334155"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_increase_child"/>

        <ImageView
            android:id="@+id/btn_increase_child"
            android:layout_width="@dimen/dimen_28"
            android:layout_height="@dimen/dimen_28"
            android:background="@drawable/bg_white_border_slate200_rounded_8"
            android:padding="@dimen/dimen_6"
            android:src="@drawable/ic_increase"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/line_gap3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="@dimen/dimen_20"
        android:background="#E2E8F0"
        app:layout_constraintTop_toBottomOf="@id/wrapper_child"/>

    <com.pasukanlangit.id.core.presentation.components.ButtonPrimaryCashplusRounded
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_42"
        android:layout_marginHorizontal="@dimen/dimen_20"
        android:layout_marginVertical="@dimen/dimen_24"
        android:textSize="13sp"
        android:text="@string/confirm"
        app:layout_constraintTop_toBottomOf="@id/line_gap3"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>