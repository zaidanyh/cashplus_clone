<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_8"
    android:background="@drawable/bg_transparent_border_slate200_rounded_12"
    android:padding="@dimen/dimen_12">

    <View
        android:id="@+id/tv_name_ship_shimmer"
        android:layout_width="0dp"
        android:layout_height="@dimen/dimen_32"
        android:background="#ddd"
        app:layout_constraintWidth_percent=".5"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/tv_code_status_shimmer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_24"
        android:layout_marginTop="@dimen/dimen_4"
        android:background="#ddd"
        app:layout_constraintTop_toBottomOf="@id/tv_name_ship_shimmer"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/wrapper_destination_shimmer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_6"
        android:padding="@dimen/dimen_12"
        android:background="@drawable/bg_sky50_border_slate200_dotted"
        app:layout_constraintTop_toBottomOf="@id/tv_code_status_shimmer">

        <View
            android:id="@+id/tv_harbor_departure_shimmer"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_28"
            android:background="#ddd"
            app:layout_constraintWidth_percent=".35"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/tv_harbor_city_departure_shimmer"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_20"
            android:layout_marginTop="@dimen/dimen_4"
            android:background="#ddd"
            app:layout_constraintWidth_percent=".25"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintTop_toBottomOf="@id/tv_harbor_departure_shimmer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_20"
            android:layout_marginTop="@dimen/dimen_4"
            android:background="#ddd"
            app:layout_constraintWidth_percent=".15"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintTop_toBottomOf="@id/tv_harbor_city_departure_shimmer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/tv_harbor_destination_shimmer"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_28"
            android:background="#ddd"
            app:layout_constraintWidth_percent=".35"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/tv_harbor_city_destination_shimmer"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_20"
            android:layout_marginTop="@dimen/dimen_4"
            android:background="#ddd"
            app:layout_constraintWidth_percent=".25"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintTop_toBottomOf="@id/tv_harbor_destination_shimmer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_20"
            android:layout_marginTop="@dimen/dimen_4"
            android:background="#ddd"
            app:layout_constraintWidth_percent=".15"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintTop_toBottomOf="@id/tv_harbor_city_destination_shimmer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/dimen_20"
        android:layout_marginTop="@dimen/dimen_4"
        android:background="#ddd"
        app:layout_constraintWidth_percent=".6"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintTop_toBottomOf="@id/wrapper_destination_shimmer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>