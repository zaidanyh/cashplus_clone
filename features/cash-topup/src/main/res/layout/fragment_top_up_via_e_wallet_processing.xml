<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/dimen_20"
    android:paddingHorizontal="@dimen/dimen_16"
    tools:context=".presentation.via_ewallet.TopUpViaEWalletProcessingFragment">

    <ImageView
        android:id="@+id/img_e_wallet"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_42"
        android:src="@drawable/ic_ovo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_12"
        android:layout_marginHorizontal="@dimen/dimen_24"
        android:fontFamily="@font/poppins_regular"
        android:textSize="12sp"
        android:text="@string/top_up_via_e_wallet_processing"
        android:textColor="#334155"
        android:textAlignment="center"
        app:layout_constraintWidth_percent=".85"
        app:layout_constraintTop_toBottomOf="@id/img_e_wallet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_12"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="34sp"
        tools:text="58"
        android:textColor="#334155"
        app:layout_constraintTop_toBottomOf="@id/tv_desc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_second_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_12"
        android:layout_marginBottom="@dimen/dimen_10"
        android:layout_marginStart="@dimen/dimen_4"
        android:fontFamily="@font/poppins_regular"
        android:textSize="12sp"
        android:text="@string/second"
        android:textColor="#334155"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@id/tv_time"
        app:layout_constraintBottom_toBottomOf="@id/tv_time"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_20"
        app:layout_constraintTop_toBottomOf="@id/tv_second_label"/>
</androidx.constraintlayout.widget.ConstraintLayout>