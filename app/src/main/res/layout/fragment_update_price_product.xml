<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.product.UpdatePriceProductFragment">

    <TextView
        android:id="@+id/txtChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16"
        android:layout_marginStart="@dimen/dimen_20"
        android:fontFamily="@font/poppins_medium"
        android:textSize="15sp"
        android:text="@string/change_price"
        android:textColor="#334155"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/img_close_dialog"
        android:layout_width="@dimen/dimen_28"
        android:layout_height="@dimen/dimen_28"
        android:layout_marginTop="@dimen/dimen_16"
        android:layout_marginEnd="@dimen/dimen_20"
        android:src="@drawable/close_icon_red"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/txt_change_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8"
        android:layout_marginHorizontal="@dimen/dimen_20"
        android:fontFamily="@font/poppins_regular"
        android:textSize="12sp"
        android:text="@string/change_price_desc"
        android:textColor="#64748B"
        app:layout_constraintTop_toBottomOf="@id/txtChange"/>

    <com.pasukanlangit.id.core.presentation.components.CustomTextInputLayout
        android:id="@+id/input_update_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_6"
        android:layout_marginHorizontal="@dimen/dimen_20"
        app:hintEnabled="false"
        app:hintAnimationEnabled="false"
        app:errorEnabled="true"
        app:layout_constraintTop_toBottomOf="@id/txt_change_desc">

        <EditText
            android:id="@+id/edt_update_price"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_42"
            android:paddingHorizontal="@dimen/dimen_12"
            android:background="@drawable/bg_transparent_border_slate200_rounded_10"
            android:fontFamily="@font/poppins_regular"
            android:textSize="13sp"
            android:hint="@string/input_change_price"
            android:textColor="#334155"
            android:textColorHint="#94A3B8"
            android:inputType="numberDecimal"
            android:digits="1234567890"
            android:maxLength="10"
            android:imeOptions="actionDone"
            android:importantForAutofill="no"
            app:layout_constraintTop_toBottomOf="@id/txt_change_desc"/>
    </com.pasukanlangit.id.core.presentation.components.CustomTextInputLayout>

    <Button
        android:id="@+id/btn_save_change_price"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_42"
        android:layout_marginTop="@dimen/dimen_12"
        android:layout_marginBottom="@dimen/dimen_24"
        android:layout_marginHorizontal="@dimen/dimen_20"
        android:background="@drawable/background_button_state"
        android:fontFamily="@font/poppins_regular"
        android:textSize="13sp"
        android:text="@string/save_changes"
        android:textColor="@drawable/color_indicator_state"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/input_update_price"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>