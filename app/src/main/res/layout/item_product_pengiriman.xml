<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_product_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        tools:text="Pesanan 1"
        android:textColor="@android:color/black"
        android:fontFamily="@font/poppins_semibold"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/iv_product"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="6dp"
        tools:src="@drawable/logo_metro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_product_no"
        />

    <LinearLayout
        android:id="@+id/wrapper_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintStart_toEndOf="@id/iv_product"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_product"
        app:layout_constraintBottom_toBottomOf="@id/iv_product">

        <TextView
            android:id="@+id/tv_name_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Penumbuh breweok"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@android:color/black"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_count_and_height_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Penumbuh breweok"
            android:fontFamily="@font/poppins_regular"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/tv_price_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Penumbuh breweok"
            android:textColor="@android:color/black"
            android:fontFamily="@font/poppins_medium"
            android:textSize="12sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Penumbuh breweok"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        tools:visibility="visible"
        android:fontFamily="@font/poppins_regular"
        app:layout_constraintTop_toBottomOf="@id/wrapper_detail"
        android:textSize="11sp"/>

    <View
        android:id="@+id/hr_top"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DCDCDC"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_note"/>


</androidx.constraintlayout.widget.ConstraintLayout>