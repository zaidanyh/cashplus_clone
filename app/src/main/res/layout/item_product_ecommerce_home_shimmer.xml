<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="140dp"
    android:layout_height="240dp"
    android:layout_marginEnd="@dimen/dimen_12">

    <View
        android:id="@+id/iv_shimmer"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_margin="@dimen/dimen_8"
        android:background="#ddd"
        app:layout_constraintTop_toTopOf="parent"/>
    
    <View
        android:id="@+id/rating_shimmer"
        android:layout_width="90dp"
        android:layout_height="@dimen/dimen_20"
        android:layout_marginTop="@dimen/dimen_8"
        android:layout_marginStart="@dimen/dimen_8"
        android:background="#ddd"
        app:layout_constraintTop_toBottomOf="@id/iv_shimmer"
        app:layout_constraintStart_toStartOf="parent"/>

    <View
        android:id="@+id/name_shimmer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_24"
        android:layout_marginTop="@dimen/dimen_6"
        android:layout_marginHorizontal="@dimen/dimen_8"
        android:background="#ddd"
        app:layout_constraintTop_toBottomOf="@id/rating_shimmer"/>

    <View
        android:id="@+id/discount_shimmer"
        android:layout_width="35dp"
        android:layout_height="@dimen/dimen_20"
        android:layout_marginTop="2dp"
        android:layout_marginStart="@dimen/dimen_8"
        android:background="#ddd"
        app:layout_constraintTop_toBottomOf="@id/name_shimmer"
        app:layout_constraintStart_toStartOf="parent"/>

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/dimen_16"
        android:layout_marginStart="@dimen/dimen_4"
        android:layout_marginEnd="@dimen/dimen_8"
        android:background="#ddd"
        app:layout_constraintTop_toTopOf="@id/discount_shimmer"
        app:layout_constraintBottom_toBottomOf="@id/discount_shimmer"
        app:layout_constraintStart_toEndOf="@id/discount_shimmer"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:layout_width="105dp"
        android:layout_height="@dimen/dimen_24"
        android:layout_marginTop="@dimen/dimen_6"
        android:layout_marginStart="@dimen/dimen_8"
        android:background="#ddd"
        app:layout_constraintTop_toBottomOf="@id/discount_shimmer"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>