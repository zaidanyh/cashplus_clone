<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.pages.home.ChooseTopUpFragment">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_20"
        android:fontFamily="@font/poppins_medium"
        android:textSize="16sp"
        android:text="@string/topup_choose"
        android:textColor="#475569"
        app:layout_constraintTop_toTopOf="@id/ic_close"
        app:layout_constraintBottom_toBottomOf="@id/ic_close"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/ic_close"
        android:layout_width="@dimen/dimen_28"
        android:layout_height="@dimen/dimen_28"
        android:layout_marginTop="@dimen/dimen_16"
        android:layout_marginEnd="@dimen/dimen_20"
        android:src="@drawable/close_icon_red"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.pasukanlangit.id.core.presentation.components.ButtonPrimaryCashplusRounded
        android:id="@+id/btn_top_up_cashplus"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_38"
        android:layout_marginTop="@dimen/dimen_28"
        android:layout_marginHorizontal="@dimen/dimen_20"
        android:fontFamily="@font/poppins_medium"
        android:textSize="13sp"
        android:text="@string/cashplus_saldo"
        app:layout_constraintTop_toBottomOf="@id/txtTitle"/>

    <com.pasukanlangit.id.core.presentation.components.ButtonSecondaryCashplusRounded
        android:id="@+id/btn_top_up_qris"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_38"
        android:layout_marginTop="@dimen/dimen_16"
        android:layout_marginBottom="@dimen/dimen_32"
        android:layout_marginHorizontal="@dimen/dimen_20"
        android:fontFamily="@font/poppins_medium"
        android:textSize="13sp"
        android:text="@string/qris_saldo"
        app:layout_constraintTop_toBottomOf="@id/btn_top_up_cashplus"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>