<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:layout_marginBottom="16dp">


    <View
        android:id="@+id/img_item_banner_list"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="#ddd"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/img_item_banner_list">

        <View
            android:id="@+id/tv_title_banner"
            android:layout_width="220dp"
            android:layout_height="12dp"
            android:background="#ddd"
            android:text="Nikmati Cash Back untuk Produk tertentu"/>

        <View
            android:id="@+id/tv_description_banner"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#ddd" />

        <View
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#ddd" />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>