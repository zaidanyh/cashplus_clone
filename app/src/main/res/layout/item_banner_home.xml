<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    app:cardCornerRadius="@dimen/dimen_12"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_border_slate100_rounded_12">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/image_item_banner"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:contentDescription="@string/banner_image"
            android:scaleType="centerCrop"
            android:padding="1dp"
            app:riv_corner_radius_top_left="@dimen/dimen_12"
            app:riv_corner_radius_top_right="@dimen/dimen_12"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/banner_1" />

        <TextView
            android:id="@+id/title_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="6dp"
            android:layout_marginHorizontal="12dp"
            android:fontFamily="@font/poppins_medium"
            android:textSize="12sp"
            tools:text="Belanja kebutuhan harian selalu hemat dan komplit"
            android:textColor="#334155"
            app:layout_constraintTop_toBottomOf="@id/image_item_banner"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>



