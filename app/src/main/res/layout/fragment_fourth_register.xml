<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ui.register.FourthRegisterFragment">

    <TextView
        android:id="@+id/txtCongrats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="@dimen/dimen_16"
        android:fontFamily="@font/poppins_medium"
        android:textSize="20sp"
        android:text="Selamat, akun anda\nberhasil dibuat"
        android:textAlignment="center"
        android:textColor="#1E293B"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/img_congrats"
        android:layout_width="173.53dp"
        android:layout_height="200dp"
        android:layout_marginTop="@dimen/dimen_16"
        android:src="@drawable/img_congrats"
        app:layout_constraintTop_toBottomOf="@id/txtCongrats"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/txtWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16"
        android:layout_marginHorizontal="@dimen/dimen_16"
        android:fontFamily="@font/poppins_regular"
        android:textSize="14sp"
        android:text="@string/welcome_to_cashplus"
        android:textAlignment="center"
        android:textColor="#313F4E"
        app:layout_constraintTop_toBottomOf="@id/img_congrats"/>

    <Button
        android:id="@+id/btn_finishing"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="@dimen/dimen_16"
        android:background="@drawable/bg_primary_rounded_16"
        android:fontFamily="@font/poppins_medium"
        android:textSize="13sp"
        android:text="Selesai"
        android:textAllCaps="false"
        android:textColor="@drawable/color_indicator_state"
        app:layout_constraintTop_toBottomOf="@id/txtWelcome"/>
</androidx.constraintlayout.widget.ConstraintLayout>