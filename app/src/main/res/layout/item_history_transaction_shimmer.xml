<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimen_16"
    android:background="@drawable/bg_transparent_border_slate200_rounded_12">
    
    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/history_dsc_shimmer"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_24"
                android:background="#ddd"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintWidth_percent=".7"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <View
                android:id="@+id/history_destination_category_shimmer"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_20"
                android:layout_marginTop="@dimen/dimen_12"
                android:background="#ddd"
                app:layout_constraintWidth_percent=".5"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintTop_toBottomOf="@id/history_dsc_shimmer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <View
                android:id="@+id/history_date_shimmer"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_20"
                android:layout_marginTop="2dp"
                android:background="#ddd"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintWidth_percent=".4"
                app:layout_constraintTop_toBottomOf="@id/history_destination_category_shimmer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_20"
                android:layout_marginTop="@dimen/dimen_12"
                android:background="#ddd"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintWidth_percent=".2"
                app:layout_constraintTop_toBottomOf="@id/history_date_shimmer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>