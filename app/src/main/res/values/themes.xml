<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_radius_top</item>
    </style>
    <!-- bottomsheet dialog custom-->


    <!-- edittext custom theme -->
    <style name="EditTextTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">#BABABA</item>
        <item name="colorControlActivated">?colorPrimaryVariant</item>
        <item name="colorControlHighlight">?colorPrimaryVariant</item>
    </style>
    <!-- edittext custom theme -->

    <style name="MyTabLayoutTextAppearanceMixed" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MyTabLayoutTextAppearanceMedium" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TabTheme" parent="@style/Theme.AppCompat.Light.NoActionBar" >
        <!-- Primary brand color. -->
        <!--        <item name="colorPrimary">@color/purple_500</item>-->
        <item name="colorPrimaryVariant">#0A57FF</item>
        <item name="colorOnPrimary">@color/white</item>

<!--        &lt;!&ndash; Status bar color. &ndash;&gt;-->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="DialogStyleResizeKeyboard" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
<!--        <item name="android:statusBarColor">@android:color/transparent</item>-->
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="DatePickerCustom" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">?colorPrimaryVariant</item>
    </style>

    <style name="FullScreenDialogMax" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">95%</item>
        <item name="android:windowMinWidthMinor">95%</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="FullScreenDialogNoClose" parent="Theme.AppCompat.Light.Dialog">
        <!--        <item name="android:backgroundDimEnabled">false</item>-->
        <item name="android:windowNoTitle">true</item>
        <!--        <item name="android:padding">0dp</item>-->
        <!--        <item name="android:windowIsFloating">false</item>-->
        <item name="android:windowMinWidthMajor">85%</item>
        <item name="android:windowMinWidthMinor">85%</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <!-- material theme -->
    <style name="MaterialTheme" parent="@style/Theme.MaterialComponents.Light.NoActionBar" >
        <!-- Primary brand color. -->
        <!--        <item name="colorPrimary">@color/purple_500</item>-->
        <item name="colorPrimaryVariant">#0A57FF</item>
        <item name="colorOnPrimary">@color/white</item>

        <!--        &lt;!&ndash; Status bar color. &ndash;&gt;-->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="MaterialTheme.BottomNavigationView"
        parent="MaterialTheme">
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">9sp</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>


    <!-- ProgressBar custom color  -->
    <style name="ProgressBarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">#0A57FF</item>
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
<!--        <item name="android:popupBackground">#ffffff</item>-->
        <item name="android:textSize">12sp</item>
        <item name="android:dividerHeight">10dp</item>

        <item name="android:listPreferredItemHeightSmall">25dp</item>
        <!--        <item name="android:padding">6dp</item>-->
<!--        <item name="android:layout_margin">0dp</item>-->
    </style>
</resources>